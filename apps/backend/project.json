{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "backend:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "backend:build:development"
        },
        "production": {
          "buildTarget": "backend:build:production"
        }
      }
    },
    "seed:run": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "ts-node  -r tsconfig-paths/register -P ./tsconfig.app.json ../../node_modules/typeorm-extension/bin/cli.cjs seed:run -d src/app/database/datasource.ts"
      }
    }
  }
}
